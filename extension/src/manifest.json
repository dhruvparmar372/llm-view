{
  "manifest_version": 3,
  "name": "LLM View",
  "version": "0.0.3",
  "description": "Toggle any webpage into LLM-friendly markdown",
  "icons": {
    "16": "icon-16.png",
    "32": "icon-32.png",
    "48": "icon-48.png",
    "128": "icon-128.png"
  },
  "action": {
    "default_icon": {
      "16": "icon-16.png",
      "32": "icon-32.png"
    },
    "default_title": "Toggle LLM View",
    "default_popup": "popup.html"
  },
  "permissions": ["activeTab", "scripting", "offscreen"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  }
}
